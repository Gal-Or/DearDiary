<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/my_meetings_IMG_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/background_s"
        android:scaleType="centerCrop"
        android:alpha="0.2"/>
    <TextView
        android:id="@+id/my_meetings_LBL_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:text="My Meetings"
        android:textColor="@color/main_color"
        android:textSize="30dp"
        android:textStyle="bold"
        android:elegantTextHeight="true"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_below="@id/my_meetings_LBL_title"
        android:layout_margin="30dp">


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/my_meetings_LST_all_meetings"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"/>

    </LinearLayout>

</RelativeLayout>